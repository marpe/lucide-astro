---
import { HTMLAttributes } from "astro/types";
export interface Props extends HTMLAttributes<'svg'> {
	size?: number
}

const { size, ...rest } = Astro.props;

const props = {
	'xmlns': 'http://www.w3.org/2000/svg',
	'stroke-width': 2,
	'width': size ?? 24,
	'height': size ?? 24,
	'stroke': 'currentColor',
	'stroke-linecap': 'round',
	'stroke-linejoin': 'round',
	'fill': 'none',
	'viewBox': '0 0 24 24',
	...rest,
}
---

<svg {...props}>
	<slot />
</svg>
